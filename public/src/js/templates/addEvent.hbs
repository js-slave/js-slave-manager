<div class="">
	<h1 class="center-txt">Add - Event</h1>

	{{#each this}}
		<h2>{{categoryName}}</h2>

		{{#each events}}
			<ul class="events">
				<li class="event padding-default">
					<p>
						<h3>{{name}}</h3>
						{{description}}
						<br><br>
						<h4>Parameters</h4>
						<form class="event-form pure-form">
							<fieldset>
								<input type="hidden" name="categoryId" value="{{../id}}">
								<input type="hidden" name="eventId" value="{{id}}">

								{{#each params}}
								<label for="{{name}}-{{../id}}"> {{name}}</label>
								<input id="{{name}}-{{../id}}" name="{{name}}" class="pure-input-1-3" type="text" placeholder="{{description}}" required>
								<br>
								{{/each}}
								<br>
								<button type="submit" class="pure-button pure-button-primary">Choose</button>
							</fieldset>
						</form>
						<h4>Returned values</h4>
						{{#each returnedValues}}
							<strong>{{name}}</strong>: {{description}}
							<em>({{type}})</em>
							<br>
						{{/each}}
					</p>
				</li>
			</ul>
		{{else}}
			<p class="center-txt">
				<br>
				You have to install slaves with events...
			</p>
		{{/each}}
	{{else}}
		<p class="center-txt">
			<br>
			Your installed slaves don't have available events...
		</p>
	{{/each}}

	<div class="center-txt div-button-back">
		<a href="#/" id="button-back" class="button-xlarge pure-button pure-button-primary">Back</a>
	</div>
</div>
