<div>
	<h1 class="center-txt">List</h1>

	{{#each this}}
	<div class="pure-g">

		<div class="event pure-u-1-3">
			<h2>{{event.name}}</h2>
			<p>
				{{event.description}}
				<br><br>
				<h3>Parameters</h3>
				{{#each event.params}}
				<strong>{{name}}</strong> => {{value}}
				{{/each}}
			</p>
		</div>
		<div id="arrow-horizontal" class="pure-u-1-3"></div>
		<div class="action pure-u-1-3">
			<h2>{{action.name}}</h2>
			<p>
				{{action.description}}
			</p>
		</div>

	</div>
	{{/each}}
</div>
