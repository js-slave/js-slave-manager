<div>
	<h1 class="center-txt">List</h1>
	{{#each this}}
		<div class="pure-g">
			<div class="event pure-u-1-4">
				<div class="margin-default">
					<h2>{{event.name}}</h2>
					<p>
						{{event.description}}
						<br><br>
						<h3>Parameters</h3>
						{{#each event.params}}
						<strong>{{name}}</strong> => {{value}}
						{{/each}}
					</p>
				</div>
			</div>
			<div class="pure-u-1-4">
				<div id="arrow-horizontal"></div>
			</div>
			<div class="action pure-u-1-4">
				<div class="margin-default">
					<h2>{{action.name}}</h2>
					<p>
						{{action.description}}
					</p>
				</div>
			</div>
			<div class="pure-u-1-4 center-txt">
				<button id="button-delete" class="margin-default center-vertical pure-button pure-button-primary button-xxlarge button-error">Delete</button>
			</div>
		</div>
	{{else}}
		<p class="center-txt">
			<br>
			You have to add slaves first...
			<br><br>
			<a href="#/addEvent" class="button-xlarge pure-button pure-button-primary">Add</a>
		</p>
	{{/each}}
	<div class="center-txt div-button-back">
		<a href="#/" class="button-xlarge pure-button pure-button-primary">Back</a>
	</div>
</div>
