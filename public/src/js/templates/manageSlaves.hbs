<div>
	<h1 class="center-txt">Manage slaves</h1>
	<br>
	{{#each this}}
		<div class="center-div center-txt">
			<h2>{{name}}</h2>
			<p>
				{{#if version}}
					Current version: {{version}}
					<br><br>
				{{/if}}

				{{#if installed}}
					{{#if newVersion}}
						<button data-name="{{name}}" class="pure-button pure-button-primary button-success button-upgrade">Upgrade to {{latestVersion}}</button>
					{{/if}}
					<button data-name="{{name}}" class="pure-button pure-button-primary button-error button-uninstall">Uninstall</button>
				{{else}}
					<button data-name="{{name}}" class="pure-button pure-button-primary button-success button-install">Install</button>
				{{/if}}
				<br><br>
			</p>
		</div>
	{{else}}
		<p class="center-txt">
			<br>
			No slave found...<br>
			Please verify that there are slaves inside the file "slaves.json".
		</p>
	{{/each}}

	<div class="center-txt div-button-back">
		<a href="#/" class="button-xlarge pure-button pure-button-primary">Back</a>
	</div>
</div>

<div class="overlay" style="display:none;">
	<div style="margin-top: 10%;">
		<p class="center-txt">Loading...</p>
		<div class="center-div" data-loader="arrow-circle"></div>
	</div>
</div>
